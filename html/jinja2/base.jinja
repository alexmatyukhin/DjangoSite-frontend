<!DOCTYPE html>
<html lang="ru_RU">
  <head>
    {% block head %}
      <title>{% block title %}{{ title|e }}{% endblock %}</title>
      <meta charset="UTF-8">
      <link rel="stylesheet" href="/static/css/main.css">
    {% endblock head %}
  </head>
  <body>
    {% block body %}
      <header>
        {% block header %}
	  {% block heads %}
            <h1>Logotype</h1>
            <h2>Title</h2>
	  {% endblock heads %}
	  <nav>
            {% block nav %}
              <ul>
		<li><a href="/">Главная страница</a></li>
              </ul>
            {% endblock nav %}
	  </nav>
	{% endblock header %}
      </header>
      <main>
        {% block main %}
          <section><article>Section</article></section>
        {% endblock %}
      </main>
      <footer>{% block footer %}Footer{% endblock %}</footer>
    {% endblock body %}
  </body>
</html>

